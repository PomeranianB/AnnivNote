<h2>投稿一覧</h2>

<% @posts.each do |post| %>
  <div>
  <%= link_to post_path(post.id) do %>
  <p>タイトル：<%= post.title %></p>
  <% end %>  
    <p>本文：<%= post.body %></p>

<br>
    <p>ユーザーネーム：<%= post.user.name %></p>
    <%= image_tag post.user.get_profile_image %>
  </div>

<% end %>
<%= paginate @posts %>