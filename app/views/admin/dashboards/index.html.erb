<main>
    <div class="fixed-top text-right">
      <%= link_to destroy_admin_session_path, method: :delete do %>
        <i class="fa-solid fa-right-from-bracket" style="color: #423210;">  ログアウト</i>
      <% end %>
    </div>

<h3>全ユーザー一覧</h3>
<ul>
  <% @users.each do |user| %>
    <li>
    <%=link_to(admin_user_path(user.id), class: "text-dark") do %>
      <%= user.name %>
    <% end %>
     - <%= user.email %>
      - <%= link_to '退会させる', admin_user_path(user), method: :delete, data: { confirm: '本当に退会させますか？' }, class: "my-custum-link" %> 
    </li>
  <% end %>
</ul>

</main>