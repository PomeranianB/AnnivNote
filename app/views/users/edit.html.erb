<main>
<h2 class="subtitle">マイプロフィール編集</h2>

<% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user do |f| %>
  <p><label for="inputName">名前</label></p>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%><br><br>
  <p><label for="inputImage">プロフィール画像</label><p>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br><br> 
  <p><label for="inputName">自己紹介</label></p>
  <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"名前"%><br><br>  
  <%= f.submit "変更する", {class: 'btn my-custom-button'} %>
<% end %>

</main>