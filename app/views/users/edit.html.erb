<head>
<%= stylesheet_link_tag 'users', media: 'all' %>
</head>


<h1>マイプロフィール編集</h1>

<% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h2>プロフィール編集</h2>
<%= form_with model: @user do |f| %>
  <label for="inputName">名前</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
  <label for="inputImage">プロフィール画像</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  
  <label for="inputName">自己紹介</label>
  <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"名前"%>  
  <%= f.submit "変更を保存" %>

<% end %>
