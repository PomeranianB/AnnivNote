<main style="background-color: #fff6d7 ">
<div id="users">
<div class="container vh-100">
  <div class="row">
    <div class="sidebar_fixed, col-sm-3">
      <div class="row, mt-3, text-center">
        <h4><%= @user.name %></h4><br>
      </div>
      <div class="row, m-5, text-center">
        <%= image_tag @user.get_profile_image %>
      </div>
      <div class="row, mt-5, text-center">
        <p><br><%= @user.introduction %><br></p>
      </div>
      <div class="row, mt-3, text-center">
        <% if @user == current_user && @user.email != "guestuser@example.com" %>
          <a class="btn my-custom-button" href="/users/:id/edit" role="button">プロフィール編集</a>
        <% end %>
      </div>
      <div class="row, mt-3, text-center">
      <br>
        <% if user_signed_in? && @user == current_user && @user.email != "guestuser@example.com" %>
        <%= link_to "退会", confirm_unsubscribe_path(@current_user), class: "my-custum-link" %>
        <% end %>
      </div>
    </div>

    <div class="col-sm-9 col-sm-offset-3">
      <h3>記念日<i class="fa-solid fa-cake-candles"></i>投稿一覧</h3><br>
      <%= render 'posts/card', posts: @posts %>
      
      <div class="my-3">
      <%= paginate @posts %><br><br>
      </div>
    </div>
  </div>
</div>    
</main>

