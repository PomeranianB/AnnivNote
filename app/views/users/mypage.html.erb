<head>
<%= stylesheet_link_tag 'users', media: 'all' %>
</head>

<main style="background-color: #fff6d7 ">
<div class="container d-flex flex-row vh-100">
  <div class="row">
    <div class="col-3">
    <div class="sidebar_fixed text-center">
      <h4 style="color: #6C5423;"><%= @user.name %></h4>
        <%= image_tag @user.get_profile_image %>
      <p style="color: #6C5423;"><%= @user.introduction %></p>
      <% if @user == current_user %>
        <a class="btn my-custom-button" href="/users/:id/edit" role="button">プロフィール編集</a>
      <% end %>
      <br>
      <br>
      <% if user_signed_in? && @user == current_user %>
        <p style="color: #6C5423;"><%= link_to "退会", confirm_unsubscribe_path(@current_user) %></p>
      <% end %>
      </div>
    </div>

    <div class="col-9">
    <table class="table">
        <thead>
        <tr>
        <th scope="col">イメージ</th>
        <th scope="col">イベント名</th>
        <th scope="col">内容</th>
        <th scope="col">投稿日時</th>
        <th scope="col"></th>
        <th scope="col"></th>
        </tr>
        </thead>
      <tbody>
      <% @posts.each do |post| %>     
      <tr>
      <td>
      <%=link_to(post_path(post.id)) do %>
        <%= image_tag post.images.get_images, size: "200x200" %>
      <% end %>
      </td>
        <td>
        <%= link_to post_path(post.id) do %>
            <%= post.title %>
        <% end %>
        </td>
        <td>
           <%= post.body %>
        </td>
        <td>
        <%= post.created_at.strftime('%Y/%m/%d') %>
       </td>
      <% if @post.user == current_user %>
        <td>
          <%= link_to '編集', edit_post_path(@post), class: "btn btn-sm btn-success" %>
        </td>
        <td>
          <%= link_to '削除', post_path(@post), method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => "本当に消しますか？" %>
        </td>
       <% end %>

          </tr>
        </tbody>
       <% end %>
        </table>
      </div>
    </div>
  </div>
</main>

