<main>

  <div>
  <%= link_to "グループを作成する", new_group_path %>｜<%= link_to "全グループ一覧", groups_path %>
  </div>
  <br>
  
  <h3>主催しているグループ</h3>
    <ul>
      <% @owned_groups.each do |group| %>
        <li><h5><%= link_to group.name, group_path(group) %></h5></li>
      <% end %>
    </ul>

  <h3>参加しているグループ</h3>
    <% if @my_groups.any? %>
      <ul>
        <% @my_groups.each do |group| %>
          <li>
            <h5><%= link_to group.name, group_path(group) %></h5>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p>所属しているグループはありません。</p>
    <% end %>

</main>