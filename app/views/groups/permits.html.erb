<main>
  <div id= "group">
    <div class = "container">
      <h3 class="text-center"><%= @group.name %></h3>
      <br><br>
      <h4 class="text-center">承認待ち一覧</h4><br>

      <div class= "text-center">
        <% if @permits.present? %>
          <div>
            <table class="table table-hover table-inverse">
              <thead>
                <tr>
                  <th></th>
                  <th>名前</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% @permits.each do |permit| %>
                  <tr>
                    <td><%= image_tag permit.user.get_profile_image, size: "50x50"%></td>
                    <td><%= link_to permit.user.name, user_path(permit.user.id), class: "text-dark" %></td>
                    <td class="text-right">
                      <%= link_to '承認', group_group_users_path(@group, permit_id: permit.id), method: :post, class: "btn btn-sm btn-success" %>
                      <%= link_to "却下", group_path, method: :delete, class: "btn btn-sm btn-danger" %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
        <% else %>
          <P class="text-center">承認待ちユーザーはいません。</P>
        <% end %>
        </div>
        <div class="mx-auto mt-5"><%= paginate @permits %></div>
      </div>

      <div class="row mt-5">
        <div class="col-md-9 mx-auto">
          <p class="text-center"><%= link_to "戻る", group_path(@group), class: "my-custum-link" %></p>
        </div>
      </div>

    </div>
  </div>
</main>