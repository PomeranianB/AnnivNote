<main>
  <div>
    <h3>グループ一覧</h3>
    <table class="table mt-3">
      <tr>
          <th></th>
          <th>グループ名</th>
          <th>ひとこと</th>
          <th>参加人数</th>
          <th></th>
      </tr>
      <tbody>
        <% @groups.each do |group| %>
        <tr>
          <td><%= image_tag group.get_group_image, size: "50x50" %></td>
          <td><strong><%= link_to group.name, group_path(group) %></strong></td>
          <td><p><%= group.short_comment %></p></td>
          <td><p><%= group.group_users.count %></p></td>
          <td><%= link_to "詳細", group, class: "group_#{group.id}" %></td>
          <% if group.is_owned_by?(current_user) %>
            <td class="col-1">
              <%= link_to "編集", edit_group_path(group), class: "btn btn-sm btn-success group_#{group.id}" %>
              <%= link_to "削除", group_path(group), class: "btn btn-sm btn-danger", method: :delete, data: {confirm: "本当にグループを消しますか？"} %>
            </td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</main>