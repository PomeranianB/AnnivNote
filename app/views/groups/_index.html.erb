<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>グループ名</th>
      <th>紹介文</th>
      <th>参加人数</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% groups.each do |group| %>
    <tr>
      <td><%= image_tag group.get_group_image, size: "50x50" %></td>
      <td><p><%= link_to group.name, group_path(group) %></p></td>
      <td><p><%= group.introduction %></p></td>
      <td><p><%= group.group_users.count %></p></td>
      <td><%= link_to "詳細", group, class: "group_#{group.id}" %></td>
      <% if group.is_owned_by?(current_user) %>
        <td><%= link_to "編集", edit_group_path(group), class: "btn my-custom-button group_#{group.id}" %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>